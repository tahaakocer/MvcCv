@using MvcCv.Models.Entity
@model List<TblExperiences>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-center font-weight-bold mb-4">Deneyimler Listesi</h2>  <hr />
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Alt Başlık</th>
                        <th>Tarih</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Head</td>
                            <td>@item.Subtitle</td>
                            <td>@item.Date</td>
                            <td>
                                <a href="/Experience/DeleteExperience/@item.ID" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>   Sil
                                </a>
                            </td>
                            <td>
                                <a href="/Experience/GetExperience/@item.ID" class="btn btn-success btn-sm">Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Experience/AddExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
        </div>
    </div>
</div>
