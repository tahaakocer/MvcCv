
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center font-weight-bold mb-4">Deneyim Ekle</h2>
            <form method="post">
                <div class="form-group">
                    <label for="title">Yetenek</label>
                    <input type="text" class="form-control" name="Skill" id="title" placeholder="Yetenek">
                </div>
              
                <div class="form-group">
                    <label for="rating">Derece</label>
                    <input class="form-control" id="rating" name="Rate" placeholder="Derece"></input>
                </div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

