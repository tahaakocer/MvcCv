
@model MvcCv.Models.Entity.TblSkills 
@{
    ViewBag.Title = "GetSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center font-weight-bold mb-4">Yetenek Güncelle</h2>
            <form method="post">
                <div class="form-group">
                    @Html.Label("Yetenek")
                    @Html.TextBoxFor(x => x.Skill, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Derece")
                    @Html.TextBoxFor(x => x.Rate, new { @class = "form-control" })
                </div>     
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>