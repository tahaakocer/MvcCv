@using MvcCv.Models.Entity

<div class="resume-section-content">
    <h2 class="mb-5">İletişim</h2>
    <div class="container">
        <form method="post">
            <div class="form-group">
                <label for="Name">Ad Soyad:</label>
                <input type="text" class="form-control rounded-pill" id="Name" name="Name" required>
            </div>
            <div class="form-group">
                <label for="Mail">E-Posta Adresi:</label>
                <input type="email" class="form-control rounded-pill" id="Mail" name="Mail" required>
            </div>
            <div class="form-group">
                <label for="Subject">Konu:</label>
                <input type="text" class="form-control rounded-pill" id="Subject" name="Subject" required>
            </div>
            <div class="form-group">
                <label for="Message">Mesaj:</label>
                <textarea class="form-control rounded-5" id="Message" name="Message" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
  
</div>
