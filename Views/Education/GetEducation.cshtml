@model MvcCv.Models.Entity.TblEducations
@{
    ViewBag.Title = "GetEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center font-weight-bold mb-4">Eğitim Güncelle</h2>
            <form method="post">
                <div class="form-group">
                    @Html.Label("Okul Adı")
                    @Html.TextBoxFor(x => x.Head, new { @class = "form-control" })
                    
                </div>
                <div class="form-group">
                    @Html.Label("Seviye")
                    @Html.TextBoxFor(x => x.Subtitle1, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Alan")
                    @Html.TextBoxFor(x => x.Subtitle2, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("GNO")
                    @Html.TextAreaFor(x => x.GNO, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Tarih")
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>

