
@{
    ViewBag.Title = "AddEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center font-weight-bold mb-4">Eğitim Ekle</h2>
            <form method="post">
                <div class="form-group">
                    <label for="title">Okul Adı</label>
                    <input type="text" class="form-control" name="Head" id="title" placeholder="Okul Adı">
                </div>
                <div class="form-group">
                    <label for="subtitle1">Seviye</label>
                    <input type="text" class="form-control" name="Subtitle1" id="subtitle1" placeholder="Lise, Üniversite vs.">
                </div>
                <div class="form-group">
                    <label for="subtitle2">Alan</label>
                    <input type="text" class="form-control" name="Subtitle2" id="subtitle2" placeholder="Alanı, Bölümü">
                </div>
                <div class="form-group">
                    <label for="gno">GNO</label>
                    <input type="text" class="form-control" name="GNO" id="gno" placeholder="Puanı">
                </div>
                <div class="form-group">
                    <label for="date">Tarih</label>
                    <input type="text" class="form-control" name="Date" id="date">
                </div>
  
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>