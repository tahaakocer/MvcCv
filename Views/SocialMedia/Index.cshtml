@using MvcCv.Models.Entity
@model List<TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-center font-weight-bold mb-4">Sosyal Medyalarım</h2>  <hr />
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Linki</th>
                        <th>İkon</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Link</td>
                            <td>@item.icon</td>
                            <td>
                                <a href="/SocialMedia/DeleteSocialMedia/@item.ID" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>   Sil
                                </a>
                            </td>
                            <td>
                                <a href="/SocialMedia/GetSocialMedia/@item.ID" class="btn btn-success btn-sm">Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/SocialMedia/AddSocialMedia/" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>
        </div>
    </div>
</div>

